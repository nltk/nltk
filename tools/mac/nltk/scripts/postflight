#!/bin/bash

# $0 = script path
# $1 = package path
# $2 = default location
# $3 = target volume

TMP=/tmp/nltk-installer/
cd $TMP
DIST=`/bin/ls -t | /usr/bin/head -1`

if test -e $DIST; then
  cd $DIST
  /usr/bin/sudo /Library/Frameworks/Python.framework/Versions/Current/bin/python ./setup.py install
else
  echo "Cannot find source directory:" $TMP/$DIST

# Clean up after ourselves by deleting /tmp/nltk-installer?
# rm -rf $TMP

export NLTK_DATA=/usr/share/nltk
echo export NLTK_DATA=/usr/share/nltk >> /.bashrc
