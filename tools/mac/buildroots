#!/bin/bash
#make the data root
mkdir ./Data_installer/root/usr
mkdir ./Data_installer/root/usr/share
mkdir ./Data_installer/root/usr/share/nltk
cp -R ../../data ./Data_installer/root/usr/share/nltk
chmod -R g+r ./Data_installer/root/usr/share/nltk

#Make Lib root
mkdir ./NLTKLibrary_installer/root/tmp
mkdir ./NLTKLibrary_installer/root/tmp/nltk-installer
unzip ../../dist/nltk-$1.zip -d ./NLTKLibrary_installer/root/tmp
mv ./NLTKLibrary_installer/root/tmp/nltk-$1/* ./NLTKLibrary_installer/root/tmp/nltk-installer/
