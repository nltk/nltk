</roles>

<example name="what it is, what it was, what it shall be">
  <inflection person="third" tense="present" aspect="ns" voice="active" form="full"/>
  <text>
     John doesn't think, therefore he isn't.
  </text>
  <arg n="1"        >he</arg>
  <rel              >is</rel>
  <arg n="m" f="NEG">n't</arg>
</example>

<example name="with support">
  <inflection person="third" tense="present" aspect="ns" voice="active" form="full"/>
  <text>
