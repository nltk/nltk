digraph x {
   rankdir=LR;
   
   /* The nodes */
   {
       node [style=filled, color=black, fillcolor=lightgray];
       1 [label="i"];
       2 [label="i+1"];
   }

   /* The sentence */
   {
       edge [style=invis, weight=100];
       node [shape=plaintext];
       wi [label="w[i]"]
       dots1->1->wi->2->dots2;
       dots1 [label="..."];
       dots2 [label="..."];
   }
   
   /* Edges */
   {
       1->2 [label="w[i] -> *"];
   }

}
